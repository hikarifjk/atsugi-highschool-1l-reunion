---
interface Props {
	title?: string;
}

const { title = '厚木高校1L+α 同窓会' } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const homeHref = `${base}index.html`;
const navItems = [
	{ href: homeHref, label: 'トップ' },
	{ href: `${base}event/`, label: '開催詳細' },
	{ href: `${base}news/`, label: '最新情報' },
];
const schoolFavicon = 'https://www.pen-kanagawa.ed.jp/shared/images/logo/136.png';
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href={schoolFavicon} type="image/png" />
		<link rel="shortcut icon" href={schoolFavicon} type="image/png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="container header-inner">
				<a class="brand" href={homeHref}>厚木高校1L+α 同窓会</a>
				<nav>
					<ul class="nav-list">
						{
							navItems.map((item) => (
								<li><a href={item.href}>{item.label}</a></li>
							))
						}
					</ul>
				</nav>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container">&copy; {new Date().getFullYear()} 厚木高校1L+α 同窓会</div>
		</footer>
	</body>
</html>

<style>
	:root {
		--bg: #fff8f1;
		--surface: #fffdf9;
		--card-bg: #fffaf4;
		--text: #3b2f2f;
		--subtle: #6f5a4f;
		--border: #efddcb;
		--accent: #d86f45;
		--accent-strong: #c7582f;
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		font-family: 'Hiragino Kaku Gothic ProN', 'Yu Gothic', Meiryo, sans-serif;
		background:
			radial-gradient(circle at 0% 0%, #ffe6d2 0%, transparent 48%),
			radial-gradient(circle at 100% 100%, #ffeed6 0%, transparent 42%),
			var(--bg);
		color: var(--text);
	}

	a {
		color: inherit;
	}

	.container {
		width: min(960px, calc(100% - 2rem));
		margin: 0 auto;
	}

	.site-header {
		background: linear-gradient(120deg, #fff8ef 0%, #fff1e2 100%);
		border-bottom: 1px solid var(--border);
		position: sticky;
		top: 0;
		backdrop-filter: blur(8px);
		z-index: 10;
	}

	.header-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		padding: 1rem 0;
	}

	.brand {
		text-decoration: none;
		font-weight: 800;
		color: #8e3f23;
	}

	.nav-list {
		list-style: none;
		display: flex;
		gap: 1rem;
		margin: 0;
		padding: 0;
	}

	.nav-list a {
		text-decoration: none;
		color: var(--subtle);
		padding: 0.2rem 0.35rem;
		border-radius: 6px;
	}

	.nav-list a:hover {
		color: #8e3f23;
		background: #ffe8d4;
	}

	main {
		padding: 2rem 0 3rem;
	}

	.site-footer {
		background: #fff3e5;
		border-top: 1px solid var(--border);
		color: var(--subtle);
		padding: 1.2rem 0;
		font-size: 0.9rem;
	}

	@media (max-width: 640px) {
		.header-inner {
			flex-direction: column;
			align-items: flex-start;
		}

		.nav-list {
			flex-wrap: wrap;
		}
	}
</style>
