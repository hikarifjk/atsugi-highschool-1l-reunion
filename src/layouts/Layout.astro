---
interface Props {
	title?: string;
}

const { title = '厚木高校1L+α 同窓会' } = Astro.props;
const navItems = [
	{ href: '/', label: 'トップ' },
	{ href: '/event', label: '開催詳細' },
	{ href: '/news', label: '最新情報' },
];
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="container header-inner">
				<a class="brand" href="/">厚木高校1L+α 同窓会</a>
				<nav>
					<ul class="nav-list">
						{
							navItems.map((item) => (
								<li><a href={item.href}>{item.label}</a></li>
							))
						}
					</ul>
				</nav>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container">&copy; {new Date().getFullYear()} 厚木高校1L+α 同窓会</div>
		</footer>
	</body>
</html>

<style>
	:root {
		--bg: #f9fafb;
		--surface: #ffffff;
		--text: #1f2937;
		--subtle: #6b7280;
		--border: #d1d5db;
		--accent: #2563eb;
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		font-family: 'Hiragino Kaku Gothic ProN', 'Yu Gothic', Meiryo, sans-serif;
		background: var(--bg);
		color: var(--text);
	}

	a {
		color: inherit;
	}

	.container {
		width: min(960px, calc(100% - 2rem));
		margin: 0 auto;
	}

	.site-header {
		background: var(--surface);
		border-bottom: 1px solid var(--border);
	}

	.header-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		padding: 1rem 0;
	}

	.brand {
		text-decoration: none;
		font-weight: 700;
	}

	.nav-list {
		list-style: none;
		display: flex;
		gap: 1rem;
		margin: 0;
		padding: 0;
	}

	.nav-list a {
		text-decoration: none;
		color: var(--subtle);
	}

	.nav-list a:hover {
		color: var(--accent);
	}

	main {
		padding: 2rem 0 3rem;
	}

	.site-footer {
		background: var(--surface);
		border-top: 1px solid var(--border);
		color: var(--subtle);
		padding: 1.2rem 0;
		font-size: 0.9rem;
	}

	@media (max-width: 640px) {
		.header-inner {
			flex-direction: column;
			align-items: flex-start;
		}

		.nav-list {
			flex-wrap: wrap;
		}
	}
</style>
